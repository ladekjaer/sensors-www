<!DOCTYPE html>
<html>
<head>
	<%- include('../partials/head'); %>
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="container">
	<header>
		<%- include('../partials/header'); %>
	</header>

	<main>
		<div class="jumbotron">
			<div class="row justify-content-md-center" style="margin-top: 0px">
				<div class="col-md-4">

					<% if (message) { %>
						<div class="alert {{messageClass}}" role="alert">
							<%= message %>
						</div>
					<% } %>

					<form method="POST" action="/add_user">
						<div class="form-group">
							<label for="emailInput">Email address</label>
							<input name="email" type="email" class="form-control" id="emailInput" placeholder="Enter email">
						</div>
						<div class="form-group">
							<label for="phoneInput">Phone Number</label>
							<input name="phone" type="text" class="form-control" id="phoneInput">
						</div>
						<div class="form-group">
							<label for="roleInput">Role (user type)</label>
							<input name="role" type="text" class="form-control" id="roleInput">
						</div>
						<div class="form-group">
							<label for="passwordInput">Password</label>
							<input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
						</div>

						<div class="form-group">
							<label for="confirmPasswordInput">Confirm Password</label>
							<input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput"
								placeholder="Re-enter your password here">
						</div>

						<button type="submit" class="btn btn-primary">Login</button>
					</form>
				</div>
			</div>
		</div>
	</main>

	<footer>
		<%- include('../partials/footer'); %>
	</footer>
</body>
</html>